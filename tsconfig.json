{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "skipLibCheck": true // Skip type checking in `node_modules`
  },
  "include": [
    "src/**/*",
    "RnUiDropdown.tsx",
    "RnUiDropdown.d.ts",
    "src/**/*.d.ts",
    "src/**/*.png"
  ],
  "exclude": ["node_modules"]
}
